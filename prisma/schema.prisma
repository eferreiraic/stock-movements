generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  quantityPerPack Int?
  quantityPacks   Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())

  @@index([createdAt])
  @@map("products")
}

model Place {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@index([createdAt])
  @@map("places")
}

model Movement {
  id         Int      @id @default(autoincrement())
  place_id   Int
  product_id Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@index([createdAt])
  @@map("movements")
}
